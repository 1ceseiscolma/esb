{% extends '_layout.html.twig' %}

{% block content %}
    <h2 class="my-4">
        Tube <small class="text-muted">{{ tube.name }}</small>
        <a class="btn btn-secondary btn-sm float-right" role="button" href="/">&laquo; Back</a>
    </h2>

    <div class="row">

        <div class="col-sm-6">
            <h4>Tube stats</h4>
            <table class="table">
                <tr>
                    <th scope="row">Urgent Jobs</th>
                    <td>{{ tube.currentJobsUrgent }}</td>
                </tr>
                <tr>
                    <th scope="row">Ready Jobs</th>
                    <td>{{ tube.currentJobsReady }}</td>
                </tr>
                <tr>
                    <th scope="row">Reserved Jobs</th>
                    <td>{{ tube.currentJobsReserved }}</td>
                </tr>
                <tr>
                    <th scope="row">Delayed Jobs</th>
                    <td>{{ tube.currentJobsDelayed }}</td>
                </tr>
                <tr>
                    <th scope="row">Buried Jobs</th>
                    <td>{{ tube.currentJobsBuried }}</td>
                </tr>
                <tr>
                    <th scope="row">Total Jobs</th>
                    <td>{{ tube.totalJobs }}</td>
                </tr>
            </table>
        </div>

        <div class="col-sm-6">
            {% for state,payload in peeks %}
                <h4>Next job in <small class="text-muted">{{ state }}</small> state</h4>
                {% if payload %}
                    <div class="card bg-light my-3">
                        <div class="card-body">
                            <pre class="mb-0">{{ payload }}</pre>
                        </div>
                    </div>
                {% else %}
                    <p>None</p>
                {% endif %}
            {% endfor %}
        </div>

    </div>

    <hr />

    <h4>Search</h4>
    <form action="/tube/{{ tube.name }}" method="get">
        <div class="form-group">
            <input type="search" class="form-control form-control-lg" id="query" aria-describedby="queryHelp"
                   placeholder="Enter a query" name="query" value="{{ query }}">
            <small id="queryHelp" class="form-text text-muted">Search for jobs in this tube.</small>
        </div>
    </form>

    {% if foundJobs|length > 0 %}
        <div class="table-responsive">
            <table class="table table-striped">
                <thead>
                <tr>
                    <th scope="col">Job ID</th>
                    <th scope="col">Job Payload</th>
                    <th scope="col">Job Last Event</th>
                    <th scope="col">Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for job in foundJobs %}
                    <tr>
                        <th scope="row">{{ job.uuid }}</th>
                        {% set payload = job.payloadData|json_encode() %}
                        <td><pre>{{ payload|length > 70 ? payload|slice(0, 70) ~ '...' : payload }}</pre></td>
                        <td><pre>{{ job.lastEvent.type }}</pre></td>
                        <td>
                            <div class="btn-group btn-group-sm" role="group" aria-label="Actions">
                                <a class="btn btn-secondary" href="/job/{{ job.uuid }}">
                                    <span class="oi oi-eye"></span>
                                    View
                                </a>
                            </div>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    {% endif %}
{% endblock %}
