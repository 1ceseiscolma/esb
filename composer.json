{
    "name": "webgriffe/esb",
    "type": "project",
    "authors": [
        {
            "name": "Webgriffe SRL",
            "email": "support@webgriffe.com"
        }
    ],
    "require": {
        "php": "7.0.*",
        "symfony/dependency-injection": "^3.3",
        "symfony/config": "^3.3",
        "symfony/yaml": "^3.3",
        "incenteev/composer-parameter-handler": "^2.1",
        "amphp/beanstalk": "^0.2.0"
    },
    "autoload": {
        "psr-4": {
            "Webgriffe\\Esb\\": "src/"
        }
    },
    "scripts": {
        "post-install-cmd": [
            "Incenteev\\ParameterHandler\\ScriptHandler::buildParameters"
        ],
        "post-update-cmd": [
            "Incenteev\\ParameterHandler\\ScriptHandler::buildParameters"
        ]
    },
    "extra": {
        "incenteev-parameters": {
            "file": "parameters.yml"
        }
    }
}
